{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es2020",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
		"allowSyntheticDefaultImports" : true,
		"esModuleInterop" : true,
		"typeRoots" : ["node_modules/@types", "src/types"]
    },
    "include": [
        "./src/**/*"
    ]
}